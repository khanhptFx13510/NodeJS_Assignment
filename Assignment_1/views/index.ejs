   <!-- font awesome -->
   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
   <!-- color -->
   <link rel="stylesheet" href="./color.css">
   <title><%= props.name %></title>
</head>

<body>
   <!-- header -->
   <nav class="navbar navbar-expand-md navbar-light indigo-400">
      <div class="container">
         <a class="navbar-brand" href="/">Lionel Messi</a>
         <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
               <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/profile">Profile</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" href="/salary">Salary</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" href="/covid-19">Covid-19</a>
               </li>
            </ul>
            <span class="navbar-text">
               <h2 class="title-color">Personal Information Tracking</h2>
            </span>
         </div>
      </div>
   </nav>
   <!-- Main Body -->
   <main>
      <div class="container">
         <div class="row">
            <!-- image -->
            <div class="col-4 py-2">
               <img width="100%" src="https://vnn-imgs-f.vgcloud.vn/2020/08/23/11/dien-vien-anh-thu-tiet-lo-nguyen-nhan-ly-hon-chong-cu.jpg" alt="">
            </div>
            <!-- main content -->
            <div class="col-8">
               <h3 style="text-align:center">Lionel Messi</h3>
               <!-- submit to start work and post into server -->
               <form action="/" method="POST">
                  <button style="width: 100%" class="btn btn-primary my-2" type="submit">
                     Register Work
                  </button>
                  <input type="hidden" name="startWork" value="<%= new Date() %>" />
                  <input type="hidden" name="staffId" value="<%= props._id %>" />
               </form>
               <div>
                  <select>
                     <option>Office</option>
                     <option>Home</option>
                  </select>
                  <!-- submit Staff to server -->
                  <form action="/" method="POST">
                     <button class="btn btn-primary my-2" type="submit">submit</button>
                     <input type="hidden" name="endWork" value="<%= new Date() %>" />
                     <input type="hidden" name="staffId" value="<%= props._id %>" />
                  </form>
                  <table id="table" class="table">
                     <thead>
                        <tr class="tr">
                           <th>Date</th>
                           <th>Staff Name</th>
                           <th>Company Name</th>
                           <th>Register time</th>
                           <th>End time</th>
                        </tr>
                     </thead>
               
                     <tbody>
                        
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </main>

   <!-- footer -->
   <footer class="page-footer indigo-400">
      <div class="container">
         <div class="row">
            <div class="col-md-12 py-5">
               <div class="text-center">
                  <!-- Facebook -->
                  <a class="px-3">
                     <i class="fab fa-facebook-f fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>             
                  </a>
                  <!-- Twitter -->
                  <a class="px-3">
                     <i class="fab fa-twitter fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                  </a>
                  <!-- Google +-->
